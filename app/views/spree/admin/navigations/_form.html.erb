<div data-hook="admin_inside_navigation_form" class="form-group">
  <div class="row">
    <div class="col-md-6">
      <%= f.field_container :name, class: ['form-group'] do %>
        <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name, class: 'error-message' %>
      <% end %>

      <%= f.field_container :slug, class: ['form-group'] do %>
        <%= f.label :slug, Spree.t(:slug) %>
        <%= f.text_field :slug, class: 'form-control' %>
        <%= f.error_message_on :slug, class: 'error-message' %>
      <% end %>

      <%= f.field_container :link, class: ['form-group'] do %>
        <%= f.label :link, Spree.t(:link) %>
        <%= f.text_field :link, class: 'form-control' %>
        <%= f.error_message_on :link, class: 'error-message' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= f.field_container :position, class: ['form-group'] do %>
        <%= f.label :position, Spree.t(:position) %>
        <%= f.text_field :position, class: 'form-control', disabled: true %>
        <%= f.error_message_on :position, class: 'error-message' %>
      <% end %>
      <%= f.field_container :html_class, class: ['form-group'] do %>
        <%= f.label :html_class, Spree.t(:class_attr) %>
        <%= f.text_field :html_class, class: 'form-control' %>
        <%= f.error_message_on :html_class, class: 'error-message' %>
      <% end %>
      <%= f.field_container :html_before, class: ['form-group'] do %>
        <%= f.label :html_before, Spree.t(:before_element) %>
        <%= f.text_field :html_before, class: 'form-control' %>
        <%= f.error_message_on :html_before, class: 'error-message' %>
      <% end %>
    </div>
  </div>
</div>
<%= render partial: 'js_foot' %>
