<table class="table sortable" id='listing_navigations' data-hook data-sortable-link="<%= update_positions_admin_navigations_url %>">
  <thead>
    <tr data-hook="navigations_header">
      <th class="no-border"></th>
      <th><%= Spree.t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @navigations.each do |navigation| %>
      <tr id="<%= spree_dom_id navigation %>" data-hook="navigations_row">
        <td class="move-handle">
          <span class="icon icon-sort handle"></span>
        </td>
        <td><%= navigation.name %></td>
        <td class="actions actions-2 text-right">
          <%= link_to_edit navigation.id, no_text: true %>
          <%= link_to_delete navigation, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
